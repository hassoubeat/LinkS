  .col-12
    .links-infomation-notice-area
      %h4 News
      .row
        .col-12
          - @newses.each do |news|
            .news
              .row
                .col-12
                  %a{"href" => "#news-collapse-#{news.id}", "data-toggle" => "collapse", "aria-controls" => "news-collapse-#{news.id}"}
                    %span.news-timestamp
                      = news.created_at.strftime("%Y-%m-%d")
                    %span.news-title
                      = news.title
                .col-12.news-content-area.collapse{"id" => "news-collapse-#{news.id}"}
                  %span.news-content
                    = news.content.html_safe

